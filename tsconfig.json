{
    "compilerOptions": {
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": false,
        "strict": true,
        "target": "ESNext",
        "types": [
            "vite/client"
        ],
        "useDefineForClassFields": true,
    },
    "include": [
        "./resources/js/*",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
    ],
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.test.js",
        "**/*.test.jsx"
    ]
}
